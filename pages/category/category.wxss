/* pages/category/category.wxss */
.category {
  height: 100vh;
  overflow: hidden;
}
.left-bar-scroll {
  position: absolute;
  display: inline-block;
  width: 250rpx;
  height: 1296rpx;
  top: 0;
  overflow: hidden;
}
.right-bar-scroll {
  position: absolute;
  display: inline-block;
  width: 500rpx;
  height: 1296rpx;
  right: 0;
  overflow: hidden;
}
::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}