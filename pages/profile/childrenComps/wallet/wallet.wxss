.wallet {
  display: flex;
  height: 200rpx;
  align-items: center;
  border-bottom: 30rpx solid #f6f6f6;
}
.block {
  flex: 1;
  text-align: center;
  align-items: center;
  line-height: 80rpx;
  height: 200rpx;
}
.block-top {
  display: inline-flex;
  margin: 0 auto;
  margin-top: 10rpx;
}
.number {
  color: red;
  font-size: 46rpx;
  margin-right: 10rpx;
}
.discount {
  border-left: 4px solid #f6f6f6;
  border-right: 4px solid #f6f6f6;
}